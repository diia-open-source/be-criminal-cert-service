{
    "extends": "@diia-inhouse/configs/tsconfig",
    "compilerOptions": {
        "baseUrl": "../",
        "paths": {
            "@services/*": ["src/services/*"],
            "@interfaces/*": ["src/interfaces/*"],
            "@models/*": ["src/models/*"],
            "@dataMappers/*": ["src/dataMappers/*"],
            "@utils/*": ["src/utils/*"],
            "@xmlMappings/*": ["src/xmlMappings/*"],
            "@actions/*": ["src/actions/*"],
            "@src/*": ["src/*"],
            "@tests/*": ["tests/*"]
        },
        "noEmit": true,
        "strict": true
    },
    "include": ["./**/*"]
}
